{
    "manifest_version": 3,
    "name": "Focus Mode for YouTube",
    "version": "1.0",
    "description": "Removes YouTube Shorts and shows only coding-related videos for max focus.",
    "permissions": ["scripting", "activeTab"],
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
    
  }
  